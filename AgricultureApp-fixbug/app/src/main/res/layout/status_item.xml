<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/unknow_profile" />

        <TextView
            android:id="@+id/profile_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/profile_image"
            android:text="profile name"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/star_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/profile_name_text_view"
            android:src="@drawable/ic_grade_yellow_24dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="at time"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/title_tex_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title" />

    <TextView
        android:textColor="@color/secondaryTextColor"
        android:id="@+id/content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small" />

    <ImageView
        android:id="@+id/content_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/plus_one_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circlebutton"
            android:src="@drawable/ic_exposure_plus_1_black_24dp" />
        <TextView
            android:id="@+id/like_number_text_view"
            android:layout_marginLeft="8dp"
            android:text="like number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/plus_one_button"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/comment_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_comment_black_24dp"
            />

    </RelativeLayout>

</LinearLayout>